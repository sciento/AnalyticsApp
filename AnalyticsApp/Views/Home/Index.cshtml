@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home";
}
@if (!Request.IsAuthenticated)
{
<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>
     
        <div class="col-md-11 col-md-offset-1">
        <div class="row">
            <div class="form-group">
                <label for="login-username">Username</label>                
                <input type="text" id="login-username" class="form-control" placeholder="Username or email"/>
            </div>
            <div class="form-group">
                <label for="login-password">Password</label>
                <input type="password" id="login-password" class="form-control" placeholder="Password" />                
            </div>
        </div>
        <div class="row">
            <button id="login"  type="button" class="btn btn-default">Login</button>
        </div>
        <div class="row" style="margin-top:1em;">
            <div class="col-md-8">
                <div class="alert alert-info">
                    <h4>Login Daten <small><i>FH VPN</i></small></h4>
                    Username: <b>TestUser</b><br />
                    Password: <b>test</b>
                </div>
            </div>
        </div>   
        </div>   
    </div>
    <div class="col-md-6">
        <h2>Registration</h2>  
        <div class="row">
            <div class="col-md-offset-1 col-md-11">
                <div class="form-group">
                    <label for="registration-email">E-Mail</label>
                    <input type="email" id="registration-email" class="form-control" placeholder="Email" />
                </div>
                <div class="form-group">
                    <label for="registration-username">Username</label>
                    <input type="text" id="registration-username" class="form-control" placeholder="Username" />
                </div>
                <div class="form-group">
                    <label for="registration-password">Password</label>
                    <input type="password" id="registration-password" class="form-control" placeholder="Password" />
                </div>
                <div class="form-group">
                    <label for="registration-password">Password (repeat)</label>
                    <input type="password" id="registration-password-validate" class="form-control" placeholder="Password again.." />   
                </div>
                <button type="button" class="btn btn-primary btn-lg" id="register">Register</button>   
            </div>    
        </div> 
    </div>
</div>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/common")
@Scripts.Render("~/bundles/public")
} else {
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-success">
                    Hello  @User.Identity.GetUserName()
                </div>
            </div>
            @{ Html.RenderPartial("~/Views/Dashboard/Index.cshtml"); }
        </div>
    </div>
}
